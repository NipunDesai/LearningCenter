@*DIALOG for exception*@
<script type="text/ng-template" id="catchMessage">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true" ng-click="closeDeleteDialogBox()">&times;</span><span class="sr-only">Close</span></button>

        </div>
        <div class="modal-body text-center">
            <p>{{exceptionMessage}}</p>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-primary" data-dismiss="modal" ng-click="closeDeleteDialogBox()">Ok</button>
        </div>
    </div>
</script>
