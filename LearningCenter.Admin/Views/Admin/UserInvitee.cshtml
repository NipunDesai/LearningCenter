@using LearningCenter.DomainModel.Models.Account
@model LearningCenter.DomainModel.Models.UserInvitee
@{
    ViewBag.Title = "User Invitee";
}

<div class="row">
    <div class="col-md-8 col-xs-offset-2 text-center">

        <h2>@ViewBag.Title</h2>

        <section id="loginForm">
            @using (Html.BeginForm("UserInvitee", "Admin", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <span style="color:black">@ViewBag.Message</span>
                <br />
                // @Html.ValidationSummary(true, "", new {@class = "text-danger"})
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="col-md-4 control-label"><label class="error">*</label>Name:</label>
                        @*@Html.LabelFor(m => m.Email, new { @class = "col-md-4 control-label" })*@
                        <div class="col-md-8">
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @*@Html.LabelFor(m => m.Password, new { @class = "col-md-4 control-label" })*@
                        <label class="col-md-4 control-label"><label class="error">*</label>Email:</label>
                        <div class="col-md-8">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-4 col-md-8">
                            <input type="submit" value="Send Invitation" class="btn btn-success btn-sm" />
                        </div>
                    </div>

                </div>
            }
        </section>

    </div>
</div>

