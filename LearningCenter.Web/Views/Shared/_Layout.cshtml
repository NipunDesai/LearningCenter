@*DIALOG ViewCreatorDetail*@
<script type="text/ng-template" id="viewCreatorDetail">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true" ng-click="closeUserDetailDialogBox()">&times;</button>
            <h4 class="modal-title txt-align-center" id="myModalLabel">Creator Details</h4>
        </div>
        <div class="modal-body txt-align-center">
            <div ng-repeat="user in userCollection">
                <div class="row">
                    <div class="col-lg-3">
                        <img ng-src="{{user.ProfilePicGuid}}" class="img-circle" />
                    </div>
                    <div class="col-lg-5">
                        <h4>{{user.FirstName}} {{user.LastName}}</h4>
                        <label>Age: {{user.Age}}</label>
                        <p>{{user.Education}}</p>
                        <p>{{user.Institute}}</p>
                    </div>
                    <div class="col-lg-4">
                        <p class="share_link"><a>{{user.FacebookLink}}</a></p>
                        <p class="share_link"><a>{{user.TwitterLink}}</a></p>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer txt-align-center">

        </div>
    </div>
</script>


@*DIALOG Delete ELearning Content*@
<script type="text/ng-template" id="deleteELearningContent">
    <div class="modal-content" ng-repeat="content in deleteContentCollection">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true" ng-click="closeDeleteDialogBox()">&times;</span><span class="sr-only">Close</span></button>
            @*elearning is used as course*@
            <h4 class="modal-title">Delete Course</h4>
        </div>
        <div class="modal-body text-center">
            <p style="font-size:15px">Are you sure you want to delete <span class="text-danger">{{content.Title}}</span> ?</p>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-primary" data-dismiss="modal" ng-click="deleteELearningContentById(content.Id)">Yes</button>
            <button type="button" class="btn btn-default" data-dismiss="modal" ng-click="closeDeleteDialogBox()">No</button>
        </div>
    </div>
</script>

