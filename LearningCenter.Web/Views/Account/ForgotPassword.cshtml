@model LearningCenter.DomainModel.Models.Account.ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot your password?";
}

<div class="col-md-8 col-xs-offset-2 text-center">
    <h2>@ViewBag.Title</h2>
    <br />
    @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {

        @Html.AntiForgeryToken()
        @*@Html.ValidationSummary("", new { @class = "text-danger" })*@
        <p class="error">@ViewBag.Error</p>
        <div class="form-group">

            <label class="col-md-4 control-label"><label class="error">*</label>Email:</label>
            <div class="col-md-8">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                <p class="error">
                    @Html.ValidationMessageFor(m => m.Email)
                </p>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-4 col-md-8">
                <input type="submit" class="btn btn-primary btn-sm btn-block" value="Submit" />
            </div>
        </div>
    }

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
